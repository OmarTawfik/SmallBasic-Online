<root kind="StatementSyntax">
    <SubModuleStatementSyntax>
        <subCommand type="SubCommandSyntax" />
        <statementsList type="BaseStatementSyntax" array="true" />
        <endSubCommand type="EndSubCommandSyntax" />
    </SubModuleStatementSyntax>

    <IfStatementSyntax>
        <ifPart type="IfConditionPartStatementSyntax" />
        <elseIfParts type="ElseIfConditionPartStatementSyntax" array="true" />
        <elsePart type="ElseConditionPartStatementSyntax" optional="true" />
        <endIfCommand type="EndIfCommandSyntax" />
    </IfStatementSyntax>

    <IfConditionPartStatementSyntax>
        <headerCommand type="IfCommandSyntax" />
        <statementsList type="BaseStatementSyntax" array="true" />
    </IfConditionPartStatementSyntax>

    <ElseIfConditionPartStatementSyntax>
        <headerCommand type="ElseIfCommandSyntax" />
        <statementsList type="BaseStatementSyntax" array="true" />
    </ElseIfConditionPartStatementSyntax>

    <ElseConditionPartStatementSyntax>
        <headerCommand type="ElseCommandSyntax" />
        <statementsList type="BaseStatementSyntax" array="true" />
    </ElseConditionPartStatementSyntax>

    <WhileStatementSyntax>
        <whileCommand type="WhileCommandSyntax" />
        <statementsList type="BaseStatementSyntax" array="true" />
        <endWhileCommand type="EndWhileCommandSyntax" />
    </WhileStatementSyntax>
    
    <ForStatementSyntax>
        <forCommand type="ForCommandSyntax" />
        <statementsList type="BaseStatementSyntax" array="true" />
        <endForCommand type="EndForCommandSyntax" />
    </ForStatementSyntax>
    
    <LabelStatementSyntax>
        <command type="LabelCommandSyntax" />
    </LabelStatementSyntax>
    
    <GoToStatementSyntax>
        <command type="GoToCommandSyntax" />
    </GoToStatementSyntax>
    
    <ExpressionStatementSyntax>
        <command type="ExpressionCommandSyntax" />
    </ExpressionStatementSyntax>
</root>